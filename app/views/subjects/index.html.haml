%h4
  Список предметов

=search_form_for @search do |f|
  %label Найти предмет
  =f.text_field :name_or_short_name_cont, :placeholder => "Поиск..."
  %br
  =f.submit 'Найти', :class => "btn primary"
%br

=link_to 'Добавить предмет', new_subject_path, :class => "btn"
%br
%br

%table.table.table-bordered.table-hover
  %thread
    %tr
      %th=Subject.human_attribute_name(:name)
      %th=Subject.human_attribute_name(:short_name)
      %th=Subject.human_attribute_name(:edit)
  %tbody
  - @subjects.each do |subject|
    %tr
      %td=subject.name
      %td=subject.short_name
      %td
        =link_to "Редактировать", edit_subject_path(subject), :class => "btn"
        =link_to "Удалить", subject_path(subject), :class => "btn btn-danger", data:{method: :delete, confirm:"Вы уверены?"}