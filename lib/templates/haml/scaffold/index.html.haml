%h1 Список <%= plural_table_name %>



= link_to 'Создать <%= human_name %>', new_<%= singular_table_name %>_path, :class => "btn"
%br
%br

%table.table.table-bordered.table-hover
  %tr
<% for attribute in attributes -%>
    %th <%= attribute.human_name %>
<% end -%>
    %th
    %th
    %th

  - @<%= plural_table_name %>.each do |<%= singular_table_name %>|
    %tr
<% for attribute in attributes -%>
      %td= <%= singular_table_name %>.<%= attribute.name %>
<% end -%>
      %td= link_to 'Открыть', <%= singular_table_name %>, :class => "btn btn-success"
      %td= link_to 'Редактировать', edit_<%= singular_table_name %>_path(<%= singular_table_name %>), :class => "btn"
      %td= link_to 'Удалить', <%= singular_table_name %>, :confirm => 'Вы уверены?', :method => :delete, :class => "btn btn-danger"

%br

%br
%div{ :style => 'width: 10%; margin: 0px auto;' }
  = will_paginate(@<%= singular_table_name %>, :previous_label => '&#8592;', :next_label => '&#8594;')